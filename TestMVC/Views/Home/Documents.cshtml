@model IEnumerable<Document>

@{
    ViewData["Title"] = "Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Documents</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Download","Download")
            </th>
            <th>
                @Html.Label("FileName", "FileName")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
            <input type="button" name="btnDownload" value="Download" onclick="downloadfile(@item.id); return false" id="btnDownload" class="ButtonTab" style="color:Black;background-color:LightGrey;margin-right: 10px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
        </tr>
}
    </tbody>
</table>
<link href="~/css/controlssheet.css" rel="stylesheet" />
<div id="filedownload" class="invisible">
    <iframe id="downloadIframe" allowtransparency="true"></iframe>
</div>
<script type="text/javascript">
    $(document).ready(function () {

    });

    function downloadfile(nam) {
        $('#downloadIframe').attr('src', '@Url.Action("Download","Home")' + '/' + nam);
    }

</script>
