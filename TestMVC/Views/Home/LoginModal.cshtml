@model BO.UserDetails

<head>


</head>
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "LoginModal" }))
{
    <body>
        <div class="container-fluid">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="_LoginModal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserId, "Enter User ID", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "Enter Password", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <button type="button" id="btnCancelNote" class="invisible" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="alert alert-danger">
            <p>@Html.Label("", "", new { id = "ErrorMessage" })</p>
        </div>

    </body>
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />



