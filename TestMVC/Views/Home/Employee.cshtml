@model IEnumerable<BO.Employee>

@{
    ViewBag.Title = "GetEmployee";
}
    <head>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <script src="~/js/site.js"></script>
       @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@


    </head>
<h2>GetEmployee</h2>

<div class="container-fluid">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayName("Image")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
               <img src="@Url.Content(item.ImagePath)" alt="Image" width="30" height="40"/>
            </td>
            <td>
                <input type="button" name="btnCity" value="City" onclick="EmployeeManagement.onSelectCity(@item.Id); return false" id="btnDownload" class="ButtonTab" style="color:Black;background-color:LightGrey;margin-right: 10px" />
                <input type="button" name="btnAddNote" value="Add Note" onclick="EmployeeManagement.displayNoteWindow(@item.Id); return false" id="btnAddNote" class="ButtonTab" style="color:Black;background-color:LightGrey;margin-right: 10px" />
            </td>
        </tr>

        }
    </table>
</div>
<div id="ContentDiv">

</div>
<div id="addNotesWindow" class="modal fade outer">
    <div class="modal-dialog modal-lg">
        <div class="modal-header head">
                @*<div class="title"><h4 class="modal-title">Add Notes</h4></div>*@
                @*<div class="xbutton"><button type="button" class="close" data-dismiss="modal">&times;</button></div>*@
        </div>
        <div class="modal-content">
        </div>
    </div>
</div>



