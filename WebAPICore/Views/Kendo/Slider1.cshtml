@using Kendo.Mvc.UI;
<div class="demo-section k-content">
    <h4>Balance</h4>
    @(Html.Kendo().Slider()
            .Name("slider")
            .IncreaseButtonTitle("Right")
            .DecreaseButtonTitle("Left")
            .Min(-10)
            .Max(10)
            .SmallStep(2)
            .LargeStep(1)
            .Value(0)
            .Events(events => events
          .Slide("sliderSlide")
          .Change("sliderChange"))
            .HtmlAttributes(new { @class = "balSlider", title = "Slider" }))
</div>


